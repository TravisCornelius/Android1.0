<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical">
	<TextView android:text="Save Songs to Phone by holding the play button" android:id="@+id/textView1"
		android:layout_width="fill_parent" android:gravity="center" android:layout_height="wrap_content"></TextView>

	<RadioGroup android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:id="@+id/groupMusic">
		<RadioButton android:layout_width="wrap_content"
			android:text="Song 1" android:layout_height="wrap_content"
			android:id="@+id/rbMusic1"></RadioButton>
		<RadioButton android:layout_width="wrap_content"
			android:text="Song 2" android:layout_height="wrap_content"
			android:id="@+id/rbMusic2"></RadioButton>
		<RadioButton android:layout_width="wrap_content"
			android:text="Song 3" android:layout_height="wrap_content"
			android:id="@+id/rbMusic3"></RadioButton>
		<RadioButton android:layout_width="wrap_content"
			android:text="Song 4" android:layout_height="wrap_content"
			android:id="@+id/rbMusic4"></RadioButton>
	</RadioGroup>
	<LinearLayout android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
		android:gravity="center">
		<Button android:text="Play" android:id="@+id/bPlay" android:padding="15dp" android:textSize="20dp"
			android:layout_width="125dp" android:layout_height="wrap_content"></Button>
		<Button android:text="Stop" android:id="@+id/bStop" android:padding="15dp" android:textSize="20dp"
			android:layout_width="125dp" android:layout_height="wrap_content"></Button>
	</LinearLayout>

</LinearLayout>